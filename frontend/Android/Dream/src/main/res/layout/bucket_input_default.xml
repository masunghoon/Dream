<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/bucket_input_title"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:hint="@string/bucket_input_title" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="20dp">

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/btn_input_dday"
                    android:background="@drawable/dday"
                    android:enabled="true"
                    android:clickable="true" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/text_input_dday"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/text_input_remain"
                        android:layout_marginLeft="10dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/layout_dday_option"
                android:visibility="gone"
                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal">

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="@string/txt_btn_range_1"
                        android:id="@+id/btn_range_1"
                        android:layout_weight="1" />

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="@string/txt_btn_range_2"
                        android:id="@+id/btn_range_2"
                        android:layout_weight="1" />
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="@string/txt_btn_range_3"
                        android:id="@+id/btn_range_3"
                        android:layout_weight="1" />

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_btn_range_4"
                        android:id="@+id/btn_range_4"
                        android:layout_weight="1" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_btn_range_5"
                        android:id="@+id/btn_range_5"
                        android:layout_weight="1" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_btn_range_6"
                        android:id="@+id/btn_range_6"
                        android:layout_weight="1" />

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_btn_range_in_my_life"
                        android:id="@+id/btn_range_in_my_life"
                        android:layout_weight="1" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_btn_range_custom"
                        android:id="@+id/btn_range_custom"
                        android:layout_weight="1" />

                    </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:id="@+id/layout_bucket_add_custom_date"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal">
                    <Button
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="@string/bucket_custom_date_set"
                        android:id="@+id/btn_custom_date_set"
                        android:layout_gravity="center_horizontal" />
                    <Button
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/bucket_custom_date_cancel"
                        android:id="@+id/btn_custom_date_cancel"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>

                <DatePicker
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:id="@+id/custom_date"
                    android:calendarViewShown="true"
                    android:spinnersShown="false"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>