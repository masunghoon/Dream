<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shelf_title"
            android:text="@string/empty_text"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shelf_roll"
            android:text="@string/shelf_roll"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shelf_container"
        android:orientation="horizontal"
        >
        <com.vivavu.dream.view.PagerContainer
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/shelf_row"
            >
            <android.support.v4.view.ViewPager
                android:layout_width="@dimen/book_width_dp"
                android:layout_height="@dimen/book_height_dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/shelf_pager"
                >

                </android.support.v4.view.ViewPager>
            </com.vivavu.dream.view.PagerContainer>
    </LinearLayout>
</LinearLayout>