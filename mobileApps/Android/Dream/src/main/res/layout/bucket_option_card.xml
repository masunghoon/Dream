<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/btn_bucket_option_note"
            android:clickable="true"
            android:background="@drawable/notes"
            />

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/btn_bucket_option_public"
            android:background="@drawable/btn_public"
            android:enabled="true"
            android:clickable="true" />

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/btn_bucket_option_share"
            android:background="@drawable/share"
            android:enabled="true"
            android:clickable="true" />

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/btn_bucket_option_pic"
            android:background="@drawable/camera_blue"
            android:clickable="true"
            android:enabled="true" />

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/btn_bucket_option_del"
            android:background="@drawable/trash_recyclebin"
            android:clickable="true"
            android:enabled="true" />
        <Button
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:id="@+id/btn_bucket_option_plan"
            android:text="@string/bucket_option_plan"
            android:clickable="true"
            android:enabled="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/btn_bucket_option_repeat"
            android:text="@string/bucket_option_repeat"
            android:drawableLeft="@drawable/repeat_2"
            android:drawablePadding="5dp"
            android:enabled="true"
            android:clickable="true" />
    </LinearLayout>

</LinearLayout>